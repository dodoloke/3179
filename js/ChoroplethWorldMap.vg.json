{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
        "width": "container",
        "height": 600,
        "projection": {"type": "equalEarth"},
        "layer": [ 
        {
            "data": {"sphere": true},
            "mark": {"type": "geoshape", "fill": "skyblue", "stroke": null}
        },
        {
            "data": {
            "url": "https://raw.githubusercontent.com/dodoloke/3179/refs/heads/main/js/WorldMapWithGraticules.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark" : {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/dodoloke/3179/refs/heads/main/data/Yearly_Surface_Temp.csv",
                "format": {"type": "csv"}
            },
            "transform": [
                {
                "lookup": "ISO_Code",
                "from": {
                    "data": {
                        "url": "https://raw.githubusercontent.com/dodoloke/3179/refs/heads/main/js/WorldMapWithGraticules.topojson",
                        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                    },
                    "key": "properties.ISO_A3"
                },
                "as": "geo"
                }
            ],
            "mark" : {"type": "geoshape", "stroke": "white"},
            "encoding": {
                "shape": {"field": "geo", "type": "geojson"},
                "color": {
                    "field": "surfacetempyear",
                    "type": "quantitative",
                    "title": "Mean Temp (°C)",
                    "scale": {"scheme": "reds"},
                    "legend": {
                        "orient": "top-right",
                        "direction": "horizontal",
                        "labelFont": "Calibri",
                        "labelFontSize": 13,
                        "titleFont": "Calibri",
                        "titleFontSize": 15
                    }
                },
                "tooltip": [ 
                    {"field": "Country", "type": "nominal", "title": "Country"},
                    {"field": "ISO_Code", "type": "nominal", "title": "ISO_3"},
                    {"field": "surfacetempyear", "type": "quantitative", "title": "Mean temp (°C) - 2022"}
                ]
            }
        }
    ]
}